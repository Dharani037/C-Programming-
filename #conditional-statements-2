//if-else-if
//program to find positive,negativ or neutral
#include<stdio.h>
#include<conio.h>
void main()
{
    int n;
    clrscr();
    printf("enter n value");
    scanf("%d",&n);
if(n>0)
  {
      printf("positive");
  }
else if(n<0)
  {
      printf("negative");
  }
else
  {
    printf("neutral");
   }
}
